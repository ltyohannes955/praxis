{
  "name": "praxis-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "db:migrate": "pnpm --filter @praxis/database db:migrate",
    "db:generate": "pnpm --filter @praxis/database db:generate",
    "db:push": "pnpm --filter @praxis/database db:push",
    "db:studio": "pnpm --filter @praxis/database db:studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@9.8.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
